@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<h1>All Employee</h1>
<div class="card-deck"></div>
    @foreach (var emp in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@emp.Name</h3>
            </div>
        </div>
        <img class="card-img-top" src="~/images/logo.png" />
        <div class="card-footer text-center">
            <a asp-controller="home" asp-action="Details" asp-route-id=@emp.Id class="btn btn-primary m-1">View</a>
            <a asp-controller="home" asp-action="Edit" asp-route-id=@emp.Id class="btn btn-secondary m-1">Edit</a>
            <a asp-controller="home" asp-action="Delete" asp-route-id=@emp.Id class="btn btn-danger m-1">Delete</a>
        </div>
    }